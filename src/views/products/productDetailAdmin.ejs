<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head", {titulo: "Ver producto"}) %> 
<body>
    <header>
        <div class="top-header">
        <div class= "logo">
            <a href="/homeAdmin" class="contenedorEnlace"><img class="imagen-logo" src="../../images/logo.png" alt="Logo de pagina"></a>
        </div>
        
        <div class="iconosHeader">
        <div class="iconH" id="iconCuenta">
            <label  for="clickk">
                <i class="fas fa-user-circle"></i> Administrador
            </label>
            <input type="checkbox" class="inputCheck" id="clickk">
            <div class="login_desplegable">
                <% if (locals.usuarioHeader) { %>
                    <span class="login_desplegable_header">¡Hola! <%= locals.datosUsuarioGlobal.first_name %> </span>
                <a href="/profileAdmin" class="login_desplegable_perfil">Ver perfil<i class="fas fa-eye" style="user-select: auto;"></i></a><hr>
                <a href="#" class="login_desplegable_edit">Editar perfil<i class="fas fa-shield-alt" style="user-select: auto;"></i></a><hr>
                <a href="/logout" class="login_desplegable_close">Cerrar cuenta<i class="fas fa-sign-out-alt"></i></a>
                <% } else{%>
    
                <span class="login_desplegable_header">¡Elija!</span>
                <a href="/login" class="login_desplegable_login">Iniciar sesión</a><hr>
                <a href="/register" class="login_desplegable_signup">Registrate</a>
                <% } %> 
            </div>
        </div>
        
        </div>
        <div class="burger-menu">
            <i class="fa fa-bars burger"></i>
        </div>
        </div>
        
    </header> 
    <main class="detailProductAdmin">
        <div class="contenedorDetalle">
            <h3>Detalle Producto</h3>
                <div class="productData">
                    <h4>Nombre Producto</h4>
                    <input class="dato" value="<%= producto.description %>" disabled> 
                </div>
                <div class="productData">
                    <h4>Imagenes</h4>
                    <div class="imagesDetail">
                        <% for( let image of producto.images ) { %>
                            <img class="detail" src="/images/<%= image.name %>">
                        <% } %>
                    </div>
                </div>
                <div class="productData">
                    <h4>Descripcion</h4>
                    <input class="dato" value="<%= producto.description %>" disabled> 
                </div>
                <div class="productData">
                    <h4>Descripcion Completa</h4>
                    <textarea class="dato" cols="20" rows="5" id="extended_description"  disabled ><%= producto.extended_description %></textarea>
                </div>
                <div class="inputs">
                    <div class="inputsData">
                        <h4>Precio</h4>
                        <input class="dato" value="<%= producto.price  %>" disabled> 
                    </div>
                    <div class="inputsData">
                        <h4>Descuento</h4>
                        <input class="dato" value="<%= producto.discount  %> %" disabled> 
                    </div>
                </div>
                
                <div class="inputs">
                    <div class="inputsData">
                        <h4>Stock</h4>
                        <input class="dato" value="<%= producto.stock  %>" disabled> 
                    </div>
                    <div class="inputsData">
                        <h4>Stock Minimo</h4>
                        <input class="dato" value="<%= producto.stock_min  %>" disabled> 
                    </div>
                    <div class="inputsData">
                        <h4>Stock Maximo</h4>
                        <input class="dato" value="<%= producto.stock_max  %>" disabled> 
                    </div>
                </div>
                <div class="inputs">
                    <div class="inputsData" >
                        <h4>Categoria</h4>
                        <input class="dato" value="<%= producto.category.name  %>" disabled>
                    </div>
                    <div class="inputsData">
                        <h4>Marca</h4>
                        <input class="dato" value="<%= producto.brand.name  %>" disabled>
                    </div>
                    <div class="inputsData" >
                        <h4>Color</h4>
                        <input class="dato" value="<%= producto.color.name  %>" disabled>
                    </div>
                </div>
                <div class = "botones">
                    <a href="/products/viewProducts"><button class= "botonCancelar" type="button"> Volver </button></a>
                </div>
        </div>
    </main>
    <%- include('../partials/footer') %> 
</body>
</html>